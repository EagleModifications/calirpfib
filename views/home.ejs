  <script>
    function passWord() {
      let testV = 1;
      let pass1 = prompt('Please Enter Your Password',' ');
      while (testV < 3) {
        if (!pass1) return;
        if (pass1.toLowerCase() === "letmein") {
          alert('? Access Granted!');
          window.open('/Secure');
          break;
        }
        testV += 1;
        pass1 = prompt('? Access Denied. Try again:','Password');
      }
      if (testV === 3) alert("Too many failed attempts!");
    }
  </script>

